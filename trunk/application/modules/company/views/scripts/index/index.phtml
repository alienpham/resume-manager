 function getValueListCheckBox(list,id)
{	
	if(list!=undefined){
	var num=list.length;
	if (num==undefined)
	{
		if (list.checked)
			id.value=list.value;
		else
			id.value="";
	}
	else
		{
			count=0;
			str="";
			for (i=0;i<num;i++)
			{
				if (list[i].checked)
					{
						if (count==0)
							str=list[i].value;
						else
							str = str + ", " + list[i].value;
						count++;
					}
			}
		id.value=str;
       }
	}
	//alert(id.value);
}
 
